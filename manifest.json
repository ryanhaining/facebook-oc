{
  "name": "Facebook OC",
  "version": "0.1.0",
  "description": "Unofficial Facebook Original Content filter - filter out the shares, see your friends' original posts",
  "content_scripts": [{
    "css": [],
    "js": ["filter_content.js"],
    "matches": ["https://www.facebook.com/*"]
  }],
  "permissions": [
    "storage"
  ],
  "browser_action": {
    "default_icon": {
    "128": "icons/icon_128.png"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "128": "icons/icon_128.png"
  },
  "manifest_version": 2
}
